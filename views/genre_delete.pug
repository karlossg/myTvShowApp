extends layout

block content
  h1 #{title}: #{genre.name}
    
  if genre_shows.length
  
    p #[strong Delete the following shows before attempting to delete this genre.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Shows
    
      dl
      each show in genre_shows
        dt 
          a(href=show.url) #{show.title}
        dd #{show.summary}

  else
    p Do you really want to delete this Genre?
    
    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre._id )

      button.btn.btn-primary(type='submit') Delete